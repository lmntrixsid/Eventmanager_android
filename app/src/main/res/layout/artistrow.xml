<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_rounded"
    android:layout_marginTop="2dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginBottom="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/artist_image"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="8dp"
                    android:text="artist name"
                    android:textColor="@color/white"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:id="@+id/afollowers"
                    android:layout_width="153dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="8dp"
                    android:text="Followers"
                    android:textColor="@color/white"
                    android:textSize="16dp">

                </TextView>

                <TextView
                    android:id="@+id/spotifylink"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingHorizontal="8dp"
                    android:text="check on spotify"
                    android:textColor="@color/green"
                    android:textSize="15dp">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/artist_popularity"
                    android:text="Popularity"
                    android:textSize="18dp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="8dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="149dp"
                        android:layout_height="61dp"
                        android:layout_marginTop="10dp"
                        android:paddingHorizontal="25dp"
                        android:progress="50"
                        app:indicatorColor="#aaff0000"
                        app:indicatorSize="60dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:trackThickness="5dp"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="50%"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_marginTop="8dp"
                        android:id="@+id/progressbartext"
                        >

                    </TextView>

                </androidx.constraintlayout.widget.ConstraintLayout>









            </LinearLayout>




        </LinearLayout>








        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
             android:layout_marginTop="10dp"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Popular Albums"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingHorizontal="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="11dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"




            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/white"
                android:layout_marginEnd="8dp"
                android:id="@+id/album1img"

                >

            </ImageView>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/white"
                android:layout_marginEnd="8dp"
                android:id="@+id/album2img">

            </ImageView>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/white"
                android:id="@+id/albumimg3">

            </ImageView>


        </LinearLayout>










    </LinearLayout>









</FrameLayout>